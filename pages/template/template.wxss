.tip_box{
  width:80%;
  height:auto;
  overflow:hidden;
  border-radius: 5px;
}
.tipText{
  text-align:center;
  font-size:14px;
  width:100%;
}
.tips_hip{
  position:fixed;
  margin:auto;
  top:0;
  bottom:0;
  right:0;
  left:0;
  background:rgba(255, 255, 255, 0.8);
}
.mainHip{
    width:600rpx;
    height:600rpx;
    display:flex;
    align-items:center;
    margin:250rpx auto 0;
}
.wait{
  width:100rpx;
  height:100rpx;
  display:block;
  margin:auto;
}
.scanCorder{
  float:left;
