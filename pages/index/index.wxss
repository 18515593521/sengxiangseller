/**index.wxss**/
 /*模态框*/
 @import "/pages/template/template.wxss"; 
 .bgImages{
  position:fixed;
  margin:auto;
  top:0;
  bottom:0;
  left:0;
  right:0;
  z-index:10000;
 }
  .bgImages image{
    width:100%;
    height:100%;
    display:block;
  }
  .icon_look_num{
float:left;
overflow:hidden;

}
.icon_eye{
  width:40rpx;
  height:40rpx;
  float:left;
}
.look_num{
  float:left;
  margin-left:10rpx;
  color:#999;
  font-size:26rpx;
}
.apply_name_list{
  width:100%;
  height:100rpx;
  border-bottom:1rpx solid #eee;
  overflow:hidden;
  padding:10rpx 10rpx 10rpx 20rpx;
  box-sizing:border-box;
}
.apply_name_content,.activity_content,.activity_rule{
  width:750rpx;
  height:auto;
  border-bottom:10rpx solid #eee;
  overflow:hidden;
}
.activity_rule{
  padding:0 20rpx;
  box-sizing:border-box;
}
.apply_name_list{
  width:100%;
  height:100rpx;
  border-bottom:1rpx solid #eee;
  overflow:hidden;
  padding:0 10rpx 0 20rpx;
  box-sizing:border-box;
}
.apply_num{
  width:100rpx;
  float:left;
}
.apply_text{
  color:#4abdbf;
  font-size:30rpx;
  text-align:center;
}
head_img_content{
  width:580rpx;
  overflow:hidden;
  float:left;

}
.headerImgs{
  width:80rpx;
  height:80rpx;
  border-radius:50rpx;
  margin-left:16rpx;
}
.rightTarrows{
  width:30rpx;
  float:right;
  padding:20rpx 0;
  box-sizing:border-box;
}
.rightTarrows image{
  width:30rpx;
  height:40rpx;

}
.activity_timer_icon{
  width:50rpx;
  height:100%;
  padding:15rpx 5rpx;
  box-sizing:border-box;
  float: left;
}
.activity_timer_icon image{
  width:30rpx;
  height:30rpx;
}
.activity_time{
  float:left;
  padding:22rpx 10rpx;
  box-sizing:border-box;
  height:100%;
  overflow:hidden;
}
.activity_text{
  font-size:24rpx;
  color:#999;
  width:560rpx;
  padding-left:10rpx;
  box-sizing:border-box;
}
.activity_title{
  padding:10rpx 0;
  box-sizing:border-box;
}