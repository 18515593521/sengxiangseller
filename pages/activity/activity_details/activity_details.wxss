/* pages/activity/activity_details/activity_details.wxss */
@import "/pages/plugs/wxParse/wxParse.wxss";
 /*模态框*/
 @import "/pages/template/template.wxss"; 
.icon_look_num{
width:100%;
float:left;
overflow:hidden;
padding:10rpx 20rpx;
box-sizing:border-box;

}

/*活动*/
.activity_box{
  width:750rpx;
  overflow:hidden;
  height:auto;
  background:#fff;
}
.activit_list{
    width:750rpx;
    height:auto;
    float:left;
    overflow:hidden;
    border-top:10px solid #eee;
}
.activity_img{
  width:750rpx;
  height:400rpx;
  float:left;
}
.activity_name{
  line-height:18px;
  padding:5rpx 20rpx;
  box-sizing:border-box;
  font-size:24rpx;
  color:#666;
  float:left;
}

.icon_eye{
  width:40rpx;
  height:40rpx;
  float:left;
}
.look_num{
  float:left;
  margin-left:10rpx;
  color:#999;
  font-size:30rpx;
}
.apply_name_content,.activity_content,.activity_rule{
  width:750rpx;
  height:auto;
  border-bottom:10rpx solid #eee;
  overflow:hidden;
}
.activity_rule{
  padding:0 20rpx;
  box-sizing:border-box;
}
.apply_name_list{
  width:100%;
  height:100rpx;
  border-bottom:1rpx solid #eee;
  overflow:hidden;
  padding:10rpx 10rpx 10rpx 20rpx;
  box-sizing:border-box;
}
.apply_num{
  width:100rpx;
  float:left;
}
.apply_text{
  color:#0074c1;
  font-size:30rpx;
  text-align:center;
}
.head_img_content{
  width:580rpx;
  overflow:hidden;
  float:left;

}
.headerImgs{
  width:80rpx;
  height:80rpx;
  border-radius:50rpx;
  margin-left:16rpx;
}
.rightTarrows{
  width:30rpx;
  float:right;
  padding:20rpx 0;
  box-sizing:border-box;
}
.rightTarrows image{
  width:30rpx;
  height:40rpx;

}
.activity_timer_icon{
  width:50rpx;
  height:100%;
  padding:15rpx 5rpx;
  box-sizing:border-box;
  float: left;
}
.activity_timer_icon image{
  width:30rpx;
  height:30rpx;
}
.activity_time{
  float:left;
  padding:22rpx 10rpx;
  box-sizing:border-box;
  height:100%;
  overflow:hidden;
  width:670rpx;
}
.activity_text{
  font-size:24rpx;
  color:#999;
}
.activity_title{
  padding:10rpx 0;
  box-sizing:border-box;
}
.mark{
  width:5rpx;
  height:30rpx;
  background:#4abdbf;
  float:left;
  margin:5rpx 10rpx 0;
}
.mark_title{
  font-size:32rpx;
  color:#0074c1;
}
.activity_car{
  font-size:24rpx;
  width:100%;
  color:#333;
  margin-bottom:20rpx;
}
.activity_car view{
  font-size:24rpx;
}
.activity_car view image{
  width:100%;
}
.activity_list{
  width:300rpx;
  height:160rpx;
  display:inline-block;
  margin:0 5px;
  overflow:hidden;
  position:relative;
}
.scroll_view_activity{
  height:200rpx;
  display:flex;
  white-space:nowrap;
}
.activity_list image{
  width:100%;
  height:160rpx;
}
.activity_view_name{
  width:100%;
  height:40rpx;
  color:#fff;
  font-size:20rpx;
  background:rgba(0, 0, 0, 0.5);
  position:absolute;
  bottom:0;
  left:0;
  right:0;
  text-align:center;
  line-height:40rpx;
}
.canvas{
  width:750rpx;
  height:1334rpx;
}
.canvasBox{
  position:absolute;
  margin:auto;
  top:0;
  bottom:0;
  left:0;
  right:0;
  z-index:-1000;
  opacity:0;
}
.makeCard{
  width:750rpx;
  height:80rpx;
  line-height:80rpx;
  text-align:center;
  color:#fff;
  background:#0074c1;
  font-size:28rpx;
  position:fixed;
  bottom:0;
}
/*分享的弹框*/
.sharecontents{
  width:600rpx;
  height:380rpx;
  border:2rpx solid #0074c1;
  border-radius:10rpx;
  overflow:hidden;
  margin:auto;
  background:#fff;
  position:absolute;
  top:0;
  left:0;
  bottom:0;
  right:0;

}
.care,.sure{
  width:50%;
  height:80rpx;
  line-height:80rpx;
  text-align:center;
  font-size:26rpx;
  color:#fff;
  background:#0074c1;
}
.sure{
  border:0;
  border-radius: 0;
}
/* 点击分享弹出框 */
.maskPopup{
  position:fixed;
  margin:auto;
  background:rgba(0, 0, 0, 0.5);
  width:100%;
  height:100%;
  bottom:0;
  left:0;
  z-index:1000;
}
.textBtn{
  width:100%;
  height:80rpx;
  float:left;
  border-top:2rpx solid #0074c1;
}
.btnsBox{
  width: 100%;
  height: 243rpx;
  position:fixed;
  bottom:0;

}
.btnCard{
  width:750rpx;
  height:80rpx;
  line-height:80rpx;
  text-align:center;
  color:#666;
  background:#fff;
  font-size:28rpx;
  border-bottom: 1px solid #fff;
}
.inputMBox{
  width: 580rpx;
  height: 260rpx;
  margin-top: 20rpx;
  margin-left: 20rpx;
  
}