/* pages/myself/myself/myself.wxss */
.list{
  width:750rpx;
  overflow:hidden;
  border-top:2rpx solid #eee;
  /* border-bottom:2rpx solid #eee; */
}
.paddingBox{
  padding:20rpx;
  box-sizing:border-box;
}
.flexRow{
  display:flex;
  flex-flow:row nowrap;
  
}
.flexColumn{
  display:flex;
  flex-flow:column wrap;
}
.item_li{
  font-size:28rpx;
  width:180rpx;
  text-align:center;
  height:80rpx;
  line-height:80rpx;
}
.list .active{
  border-bottom:2rpx solid #0074c1;
  color:#0074c1;
}
.search_box{
  height:110rpx;
  overflow:hidden;
}
.search{
  width:100%;
  height:100%;
  position:relative;
}
.search_input{
  font-size:28rpx;
  border-radius:10rpx;
  border:2rpx solid #eee;
  width:100%;
  height:100%;
  color:gray;
  padding-right:40rpx;
  box-sizing:border-box;
  z-index:0;
  background:#f5f5f5;
}
.search image{
  width:50rpx;
  height:50rpx;
  position:absolute;
  margin:auto;
  right:8rpx;
  top:15rpx;
  z-index:10000;
}
.select_list{
  width:30%;
  border:2rpx solid #eee;
  border-radius:10rpx;
  box-sizing:border-box;
  height:100%;
  position:relative;
  margin-left:40rpx;
}
.select_list .from_text{
  width:100%;
  float:left;
  padding:0 10rpx;
  box-sizing:border-box;
  text-align:center;
  color:#eee;
  position:absolute;
}
.from_text view{
  font-size:24rpx;
  color:#666;
  line-height:70rpx;
  margin-right:30rpx;
}
.pullDown{
  width:30rpx;
  height:30rpx;
  float:right;
  margin:25rpx 10rpx;
}
.store,.edit,.print{
  width:30rpx;
  height:30rpx;
}
.orderItem{
  font-size:26rpx;
  overflow:hidden;
  line-height:30rpx;
}
.leftInfo{
  float:left;
  /* margin-left:20rpx; */
}
.edit,.print{
  margin-right:30rpx;
  float:right;
}
.orderInfo{
  width:750rpx;
  height:120rpx;
  background:#f5f5f5;
}
.order_info{
  width:160rpx;
  margin:0 20rpx;
  text-align:center;
  padding:20rpx 0;
  box-sizing: border-box;
}
.order_info view:nth-child(1){
    font-size:28rpx;
}
.order_info view:nth-child(2){
    font-size:22rpx;
    color:#666;
    margin-top:14rpx;
}
.orderTime{
  width:380rpx;
  float:left;
  font-size:22rpx;
  color:#666;
  margin-top:20rpx;
}
.talkRecordBox{
  background:#eee;
}
.talkRecord,.state,.talkContent{
  text-align:center;
  font-size:24rpx;
}
.light{
  width:25rpx;
  height:10px;
  position:absolute;
  top:-3rpx;
  left:10rpx;
}
.small{
  width:15rpx;
  height:15rpx;
  float:left;
  position:absolute;
  margin:auto;
  left:15rpx;
  top:11rpx;
}
/*活动记录*/
.activityRecord{
 font-size:28rpx;
 width:100%;
 height:80rpx;
 border-bottom:2rpx solid #eee;
}
.activityImg{
  width:750rpx;
  height:350rpx;
}
.activityInfo{
  width:550rpx;
}
.activityDetails{
  width:150rpx;
  height:60rpx;
  line-height:60rpx;
  text-align:center;
  border:2rpx solid #eee;
  font-size:26rpx;
  color:#666;
  border-radius:10rpx;
  align-self:center;
}
.activity_info view:nth-child(1){
  width:150rpx;
