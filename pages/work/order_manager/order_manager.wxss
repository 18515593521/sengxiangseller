}
.listInfo{
  border-top:2rpx solid #eee;
}
.orderOpationBox {
  border-bottom:2rpx solid #eee;
  display:flex;
}
.editOrders{
  font-size:24rpx;
  color:#0074c1;
  margin-right:20px;
  width:100rpx;
  height:100%;
  float:right;
  text-align:center;
}
.make_order_box{
  position:fixed;
  margin:auto;
  background:rgba(255, 255, 255, 0.5);
  width:100%;
  height:100%;
  top:0;
  bottom:0;
  left:0;
  right:0;
  z-index:1000;
}
.order_class_box{
  width:600rpx;
  height:600rpx;
  border:2rpx solid #0074c1;
  border-radius:10rpx;
  overflow:hidden;
  margin:auto;
  background:#fff;
  position:absolute;
  top:0;
  left:0;
  bottom:0;
  right:0;
}
.make_order_class{
  width:100%;
  height:500rpx;
  float:left;
}
.make_order_operation{
  width:100%;
  height:80rpx;
  float:left;
  border-top:2rpx solid #0074c1;
}
.sure,.cancel{
  text-align:center;
  line-height:80rpx;
  width:50%;
}
.sure{
  color:#fff;
  background:#0074c1;
  font-size:30rpx;
}
/*关闭订单*/
.marginAuots{
  position:absolute;
  margin:auto;
  top:0;
  bottom:0;
  left:0;
  right:0;
}
.close_order_boxs{
  width:700rpx;
  height:500rpx;
  border:2rpx solid #0074c1;
  background:#fff;
  overflow:hidden;
}
.edit_cause{
  width:100%;
  height:420rpx;
  padding:20rpx;
  box-sizing:border-box;
  font-size:26rpx;
}
.editOrders{
  font-size:24rpx;
  color:#0074c1;
  margin-left:40rpx;
  width:100rpx;
  height:100%;
  float:left;
  text-align:center;
}
.noData{
  color:#666;
  font-size:26rpx;
  text-align:center;
  margin-top:20rpx;
}