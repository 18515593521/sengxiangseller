/* pages/work/customer_manager/product_type/product_type.wxss */
.searchBox{
  width:750rpx;
  height:100rpx;
  position:relative;
}
.searchBox input{
  border:2rpx solid #eee;
  border-radius:10rpx;
  width:100%;
  height:100%;
 padding:0 25px 0 20rpx;
  box-sizing:border-box;
  font-size:26rpx;
}
.itemText{
  font-size:28rpx;
}
.item{
  width:710rpx;
  height:60rpx;
  line-height:60rpx;
  border:2rpx solid #eee;
  border-radius:5px;
  box-sizing:border-box;
  font-size:26rpx;
  padding-left:20rpx;
  margin-bottom:10rpx;
}
.noItem{
  color:#333;
  font-size:26rpx;
  text-align:center;
}
.addProduct{
  width:300rpx;
  height:80rpx;
  line-height:80rpx;
  text-align:center;
  color:#fff;
  background:#4abdc2;
  margin:300rpx auto;
  font-size:26rpx;
}